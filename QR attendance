    <p>Scan your QR code to mark attendance</p>

    <div id="reader"></div>
    <div id="result"></div>

    <div class="footer">
        Cloud Based | AWS Lambda | DynamoDB
    </div>
</div>

<script>
const apiUrl = "YOUR_API_GATEWAY_URL_HERE"; // üî¥ replace this

function onScanSuccess(decodedText) {
    document.getElementById("result").innerHTML =
        "üì° Processing attendance...";

    fetch(apiUrl, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ student_id: decodedText })
    })
    .then(res => res.json())
    .then(data => {
        const msg = data.body.message;
        const result = document.getElementById("result");

        if (msg.includes("already")) {
            result.style.color = "red";
            result.innerHTML = "‚ùå " + msg;
        } else {
            result.style.color = "green";
            result.innerHTML = "‚úÖ " + msg;
        }
    })
    .catch(() => {
        document.getElementById("result").innerHTML =
            "‚ö†Ô∏è Server error";
    });

    html5QrcodeScanner.clear();
}

/* Start QR Scanner */
const html5QrcodeScanner = new Html5QrcodeScanner(
    "reader",
    { fps: 10, qrbox: 250 }
);
html5QrcodeScanner.render(onScanSuccess);
</script>

</body>
</html>



style.css



/* ===== Global Reset ===== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}

/* ===== Background Animation ===== */
body {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: gradientMove 8s ease infinite;
}

@keyframes gradientMove {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* ===== Main Card ===== */
.container {
  background: #ffffff;
  width: 90%;
  max-width: 420px;
  padding: 30px;
  border-radius: 18px;
  text-align: center;
